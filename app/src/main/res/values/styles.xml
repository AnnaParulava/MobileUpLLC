<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">"@font/roboto_medium"</item>
    </style>

    <style name="textStyleDescription" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">"@font/roboto"</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="font">"@font/roboto_medium"</item>
    </style>

    <style name="titleCryptItemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="font">"@font/plus_jakarta_sans_medium"</item>
    </style>

    <style name="symbolCryptItemTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grayLight</item>
        <item name="font">"@font/plus_jakarta_sans_regular"</item>
    </style>

    <style name="priceCryptItemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="font">"@font/plus_jakarta_sans_semibold"</item>
    </style>

    <style name="percentCryptItemTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="font">"@font/plus_jakarta_sans_regular"</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="font">"@font/roboto"</item>
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>
</resources>