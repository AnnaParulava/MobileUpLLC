<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CryptocurrenciesListFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cryptocurrenciesListCryp"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cryptocurrencies_list"
                android:typeface="normal" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupListCryp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUSD"
                    style="@style/CustomChipStyle"
                    android:layout_width="@dimen/chipWidth"
                    android:layout_height="@dimen/chipHeight"
                    android:checked="true"
                    android:text="@string/usd" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEUR"
                    style="@style/CustomChipStyle"
                    android:layout_width="@dimen/chipWidth"
                    android:layout_height="@dimen/chipHeight"
                    android:text="@string/eur" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:id="@+id/chip_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>