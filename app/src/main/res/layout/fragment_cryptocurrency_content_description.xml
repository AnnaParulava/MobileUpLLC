<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".fragments.CryptocurrencyContentDescriptionFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:id="@+id/imgCryptocurrDescription"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvCryptocurrenciesDescriptionTitle"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tvCryptocurrenciesDescription"
                style="@style/textStyleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tvCryptoDescriptionCategoriesTitle"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tvCryptoDescriptionCategories"
                style="@style/textStyleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_description"
        android:layout_width="@dimen/pbSize"
        android:layout_height="@dimen/pbSize"
        android:indeterminateTint="@color/primary_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>